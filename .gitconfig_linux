	user = KCreate
[ghi]
	token = !security find-internet-password -a KCreate -s github.com -l 'ghi token' -w
[core]
	editor = /usr/bin/nvim
[gpg]
	program = /usr/bin/gpg2
[credential]
	helper = cache --timeout 7200
