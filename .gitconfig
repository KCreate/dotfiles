[push]
	default = simple
[color]
	ui = auto
[github]
	user = KCreate
[core]
	editor = nvim
	pager = delta --line-numbers --dark --diff-so-fancy
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[tag]
	gpgSign = true
[gpg]
	program = gpg
