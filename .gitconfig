[user]
[alias]
  s = status -s --branch
  c = commit -m
  co = checkout
  cb = checkout -b
  pop = reset HEAD~1
  aa = add -A
  log = log --oneline --decorate --graph --all
  branch = branch -vv
	l = log --graph --abbrev-commit --decorate --all --format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)\"
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[user]
	name = Leonard Schuetz
	email = leni.schuetz@me.com
[push]
	default = simple
[color]
	ui = auto
[commit]
	gpgsign = true
[github]
	user = KCreate
[ghi]
	token = !security find-internet-password -a KCreate -s github.com -l 'ghi token' -w
[core]
	editor = /usr/bin/vim
[gpg]
	program = /usr/local/bin/gpg
