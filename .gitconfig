[user]
[alias]
  # committing stuff
  c = commit -m
  ca = commit -a
  cp = !git commit && git push
  cap = !git commit -a && git push
  co = checkout
  cb = checkout -b

  # short-hand commands
  s = status -s --branch
  f = fetch
  p = push
  aa = add -A
  l = log --oneline --decorate --graph --all
  pop = reset HEAD~1
  log = log --oneline --decorate --graph --all
  branch = branch -vv

  # Include all files in `git stash`
  #
  # Git divides your files into 4 types,
  # 1. unstaged changes to tracked files
  # 2. staged changes to tracked files
  # 3. untracked files
  # 4. ignored files
  #
  # There are 2 options for git stash which change this behaviour
  # --include-untracked     Include unstaged, staged and untracked files
  # --all                   Include unstaged, staged, untracked and ignored files
  stash = stash --all

  # Revert the last commit
  fuck = reset HEAD~1

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[user]
	name = Leonard Schuetz
	email = leni.schuetz@me.com
[push]
	default = simple
[color]
	ui = auto
[commit]
	gpgsign = true
[github]
	user = KCreate
[ghi]
	token = !security find-internet-password -a KCreate -s github.com -l 'ghi token' -w
[core]
	editor = '/usr/local/bin/gvim' -f -i NONE
	pager = diff-so-fancy | less --tabs=4 -RFX
[gpg]
	program = /usr/local/bin/gpg
